---
export interface Props {
  label: string;
  value: string | number;
  subtext?: string;
  icon?: string;
}

const { label, value, subtext, icon } = Astro.props;
---

<div class="card rounded-xl p-5 transition-all hover:shadow-md">
  <div class="flex items-start justify-between">
    <div>
      <div class="text-slate-500 text-sm font-medium mb-1">{label}</div>
      <div class="text-2xl font-semibold text-slate-900">{value}</div>
      {subtext && <div class="text-sm font-medium text-emerald-600 mt-1">{subtext}</div>}
    </div>
    {icon && (
      <div class="w-10 h-10 rounded-lg bg-blue-50 flex items-center justify-center text-blue-600">
        <span class="text-xl">{icon}</span>
      </div>
    )}
  </div>
</div>
