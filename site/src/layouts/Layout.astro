---
export interface Props {
  title: string;
  currentPage?: 'leaderboard' | 'models' | 'tasks';
}

const { title, currentPage = 'leaderboard' } = Astro.props;

const navItems = [
  { id: 'leaderboard', label: 'Leaderboard', href: '/' },
  { id: 'models', label: 'Models', href: '/models/' },
  { id: 'tasks', label: 'Tasks', href: '/tasks/' },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="MBSE Benchmark - AI model performance rankings for Model-Based Systems Engineering" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen text-slate-900 blueprint-grid">
    <header class="border-b border-slate-200 bg-white/80 backdrop-blur-sm sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <a href="/" class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-gradient-to-br from-blue-600 to-cyan-500 rounded-lg flex items-center justify-center">
              <span class="text-white text-sm font-bold">M</span>
            </div>
            <div class="flex flex-col">
              <span class="font-bold text-lg text-slate-900">MBSE Benchmark</span>
              <span class="text-xs text-slate-500 -mt-1">AI Model Evaluation</span>
            </div>
          </a>
          <nav class="flex items-center space-x-1">
            {navItems.map((item) => (
              <a
                href={item.href}
                class:list={[
                  'px-4 py-2 rounded-lg text-sm font-medium transition-all',
                  currentPage === item.id
                    ? 'bg-blue-600 text-white shadow-sm'
                    : 'text-slate-600 hover:text-slate-900 hover:bg-slate-100',
                ]}
              >
                {item.label}
              </a>
            ))}
          </nav>
        </div>
      </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>

    <footer class="border-t border-slate-200 bg-white mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex flex-col md:flex-row justify-between items-center text-slate-500 text-sm">
          <div class="flex items-center space-x-2">
            <span class="font-mono text-xs bg-slate-100 px-2 py-1 rounded">v0.1.0</span>
            <span>MBSE Benchmark • MIT License • Gabriel Nepomuceno</span>
          </div>
          <a
            href="https://github.com/Nepomuceno/mbse_benchmark"
            class="mt-2 md:mt-0 flex items-center space-x-2 hover:text-slate-900 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
            <span>View on GitHub</span>
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  @import '../styles/global.css';
</style>
